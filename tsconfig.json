{
  "include": [
    "test/src/*.js",
    "src/**/**/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "types",
    "build"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "es2022",
    "lib": ["es2022", "dom"],
    "types": ["@socketsupply/socket", "node"],

    "removeComments": false,

    "checkJs": true,
    "allowJs": true,
    "noEmit": true,

    "allowSyntheticDefaultImports": true,

    "alwaysStrict": true,
    "strictNullChecks": false,

    "declaration": true,
    "declarationMap": true,

    "baseUrl": "socket:",

    "paths": {

    }
  }
}
